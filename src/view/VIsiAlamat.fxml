<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" stylesheets="@../resource/VIsiAlamat.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CIsiAlamat">
    <children>
        <!-- Full Name -->
        <HBox layoutX="65.0" layoutY="61.0" spacing="8" styleClass="input-group">
            <ImageView fitHeight="20" fitWidth="20" styleClass="icon-user" />
            <TextField fx:id="namaField" promptText="Nama Lengkap" styleClass="input-field" />
        </HBox>
        <!-- Email -->
        <HBox layoutX="65.0" layoutY="117.0" spacing="8" styleClass="input-group">
            <ImageView fitHeight="20" fitWidth="20" styleClass="icon-email" />
            <TextField fx:id="emailField" promptText="Email" styleClass="input-field" />
        </HBox>
        <!-- Phone Number -->
        <HBox layoutX="65.0" layoutY="173.0" spacing="8" styleClass="input-group">
            <ImageView fitHeight="20" fitWidth="20" styleClass="icon-phone" />
            <TextField fx:id="teleponField" promptText="Nomor Telepon" styleClass="input-field" />
        </HBox>
        <!-- Provinsi -->
        <HBox layoutX="65.0" layoutY="229.0" spacing="8" styleClass="input-group">
            <ImageView fitHeight="20" fitWidth="20" styleClass="icon-password" />
            <TextField fx:id="provinsiField" promptText="Provinsi" styleClass="input-field" />
        </HBox>
        <!-- Kota/Kabupaten -->
        <HBox layoutX="65.0" layoutY="285.0" spacing="8" styleClass="input-group">
            <ImageView fitHeight="20" fitWidth="20" styleClass="icon-password" />
            <TextField fx:id="kotaField" promptText="Kota/Kabupaten" styleClass="input-field" />
        </HBox>
        <!-- Kecamatan -->
        <HBox layoutX="65.0" layoutY="341.0" spacing="8" styleClass="input-group">
            <ImageView fitHeight="20" fitWidth="20" styleClass="icon-password" />
            <TextField fx:id="kecamatanField" promptText="Kecamatan" styleClass="input-field" />
        </HBox>
        <!-- Kode Pos -->
        <HBox layoutX="65.0" layoutY="397.0" spacing="8" styleClass="input-group">
            <ImageView fitHeight="20" fitWidth="20" styleClass="icon-password" />
            <TextField fx:id="kodeposField" promptText="Kode Pos" styleClass="input-field" />
        </HBox>
        <!-- Alamat Lengkap -->
        <HBox layoutX="65.0" layoutY="453.0" spacing="8" styleClass="input-group">
            <ImageView fitHeight="20" fitWidth="20" styleClass="icon-password" />
            <TextField fx:id="alamatField" promptText="Alamat Lengkap" styleClass="input-field" />
        </HBox>
        <!-- Create Button -->
        <Button layoutX="111.0" layoutY="523.0" prefHeight="44.0" prefWidth="170.0" styleClass="create-btn" text="KONFIRMASI" onAction="#handleKonfirmasi" />
        <!-- Overlay konfirmasi pesanan -->
        <AnchorPane fx:id="overlayPane" visible="false" style="-fx-background-color: rgba(0,0,0,0.5);" prefWidth="400.0" prefHeight="600.0">
            <children>
                <Text layoutX="50.0" layoutY="220.0" wrappingWidth="300.0" styleClass="overlay-label" text="Selamat! Detail pesanan anda telah dikirim ke email anda." />
                <Button fx:id="tutupButton" layoutX="115.0" layoutY="320.0" prefWidth="170.0" prefHeight="44.0" styleClass="create-btn" text="TUTUP" onAction="#handleTutupOverlay" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
