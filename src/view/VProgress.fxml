<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" styleClass="progress-root" stylesheets="@../resource/VProgress.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CProgress">
   <children>
      <!-- Header dengan back button - tetap di luar ScrollPane -->
      <HBox alignment="CENTER_LEFT" layoutX="24.0" layoutY="14.0" prefWidth="352.0" styleClass="header-bar">
         <children>
            <Pane onMouseClicked="#handleBackButton" styleClass="back-btn">
               <children>
                  <ImageView fitHeight="24.0" fitWidth="33.0" layoutX="-1.0" layoutY="7.0" styleClass="back-arrow-icon">
                     <image>
                        <Image url="@../extra/Screenshot_2025-07-15_222001-removebg-preview.png" />
                     </image>
                  </ImageView>
               </children></Pane>
         </children>
      </HBox>
      
      <!-- Judul halaman - tetap di luar ScrollPane -->
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="151.0" layoutY="37.0" styleClass="section-title" text="Progress" textAlignment="CENTER" />
      
      <!-- ScrollPane untuk seluruh konten progress -->
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" layoutX="0.0" layoutY="90.0" prefHeight="510.0" prefWidth="400.0" styleClass="progress-scroll-pane" vbarPolicy="AS_NEEDED">
         <content>
            <VBox spacing="16" style="-fx-padding: 24 24 24 24;">
               <children>
                  <!-- Chart kalori -->
                  <VBox styleClass="card">
                     <children>
                        <BarChart fx:id="caloriesBarChart" prefHeight="180.0" prefWidth="320.0" styleClass="progress-chart thick-bars" title="Kalori Terbakar Hari Ini">
                           <xAxis>
                              <CategoryAxis side="BOTTOM" />
                           </xAxis>
                           <yAxis>
                              <NumberAxis side="LEFT" />
                           </yAxis>
                        </BarChart>
                     </children>
                  </VBox>
                  
                  <!-- Chart durasi -->
                  <VBox styleClass="card">
                     <children>
                        <BarChart fx:id="durationBarChart" prefHeight="180.0" prefWidth="320.0" styleClass="progress-chart thick-bars" title="Durasi Workout Hari Ini">
                           <xAxis>
                              <CategoryAxis side="BOTTOM" />
                           </xAxis>
                           <yAxis>
                              <NumberAxis side="LEFT" />
                           </yAxis>
                        </BarChart>
                     </children>
                  </VBox>
                  
                  <!-- Aktivitas hari ini dalam scroll pane -->
                  <VBox styleClass="card">
                     <children>
                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="120.0" styleClass="scroll-pane" vbarPolicy="AS_NEEDED">
                           <content>
                              <VBox fx:id="activityTodayBox" spacing="8" />
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
